<VBox background_image="gui/notebook/notebook_background.png" opaque="0"
      min_size="780,545">
  <Spacer fixed_size="20"></Spacer>
  <HBox opaque="0" padding="0">
    <HBox name="equipmentPage" min_size="380,510" max_size="380,510" opaque="0">
      <VBox name="equipmentTabs" min_size="20,545" max_size="20,545" opaque="0">
        <Spacer fixed_size="194"></Spacer>
        <ImageButton name="characterButton"
                     up_image="gui/notebook/character_plain.png"
                     down_image="gui/notebook/character_back.png"
                     hover_image="gui/notebook/character_hovered.png">
        </ImageButton>
      </VBox>
      <VBox name="equipmentContent" hexpand="1" opaque="0">
        <HBox min_size="0,120" padding="0" opaque="0">
          <Spacer fixed_size="25"></Spacer>
          <VBox opaque="0">
            <Spacer fixed_size="20"></Spacer>
            <VBox margins="1,1" opaque="0">
            <Icon name="equipmentIcon" border_size="1"
                  image="gui/portraits/drunkard.png"></Icon>
            </VBox>
          </VBox>
          <Label name="equipmentDescription" foreground_color="0,0,0"
                 text="Equipment description here."></Label>
        </HBox>
        <HBox opaque="0" padding="0" vexpand="1">
          <Spacer fixed_size="20"></Spacer>
          <VBox padding="20" opaque="0">
            <Spacer fixed_size="40"></Spacer>
            <EquipmentSlot name="shirtSlot" label_text="shirt">
            </EquipmentSlot>
            <EquipmentSlot name="rightHandSlot" label_text="rhand">
            </EquipmentSlot>
            <EquipmentSlot name="beltSlot" label_text="belt"></EquipmentSlot>
            <EquipmentSlot name="bootsSlot" label_text="boots"></EquipmentSlot>
          </VBox>
          <HBox opaque="0" vexpand="1">
            <Spacer fixed_size="10"></Spacer>
            <Icon name="puppetIcon" image="gui/inv_images/char_preview.png">
            </Icon>
          </HBox>
          <VBox padding="20" opaque="0">
            <EquipmentSlot name="headSlot" label_text="head"></EquipmentSlot>
            <EquipmentSlot name="neckSlot" label_text="back"></EquipmentSlot>
            <EquipmentSlot name="leftHandSlot" label_text="lhand"></EquipmentSlot>
            <EquipmentSlot name="pantsSlot" label_text="pants"></EquipmentSlot>
          </VBox>
          <Spacer fixed_size="20"></Spacer>
        </HBox>
      </VBox>
    </HBox>
    <Spacer fixed_size="24"></Spacer>
    <VBox name="inventoryPage" min_size="376,510" max_size="376,510"
          opaque="0">
      <VBox name="inventoryContent" hexpand="1" min_size="350,0" opaque="0">
        <HBox min_size="0,120" opaque="0">
          <Label text="Item description here."></Label>
        </HBox>
        <InventoryGrid grid_size="6,7"></InventoryGrid>
      </VBox>
      <Spacer fixed_size="20"></Spacer>
    </VBox>
  </HBox>
</VBox>
